@model LoginSignUpModel
@{
    ViewData["Title"] = "Signup";
}

<div class="container" style="margin-top:30px;">
    <div class="row">
        <div class="col-sm-3" id="sidenav">
            <a href="#">
                <button class="btn mr-2 mb-2 btn-primary border-dark sidenavbutton" type="button">
                    <span class="btn-text">About</span>
                </button>
            </a>
            <br>
            <a href="#">
                <button class="btn mr-2 mb-2 btn-primary border-dark sidenavbutton" type="button">
                    <span class="btn-text">Privacy</span>
                </button>
            </a>
            <br>
            <a href="#">
                <button class="btn mr-2 mb-2 btn-primary border-dark sidenavbutton" type="button">
                    <span class="btn-text">Settings</span>
                </button>
            </a>
        </div>
        <div class="SignUpForm">
            <div class="col-sm-12 mb-4 mb-lg-0 feed">
                <div class="card">
                    <div class="card-header">
                        Sign-Up
                    </div>
                    <div class="card-body">
                        <form method="post" action="/SignUpSuccess">
                            <div class="form-group">
                                <label asp-for="UserModel.Username">Username:</label>
                                <input asp-for="UserModel.Username" class="from-control" />
                                <span asp-validation-for="UserModel.Username" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="UserModel.FirstName">First Name:</label>
                                <input asp-for="UserModel.FirstName" class="from-control" />
                                <span asp-validation-for="UserModel.FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="UserModel.LastName">Last Name:</label>
                                <input asp-for="UserModel.LastName" class="from-control" />
                                <span asp-validation-for="UserModel.LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="UserModel.Email">Email:</label>
                                <input asp-for="UserModel.Email" class="from-control" />
                                <span asp-validation-for="UserModel.Email" class="text-danger"></span>
                            </div>

                            <input type="submit" value="Submit">
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>

