@model SignInModel
@{
    ViewData["Title"] = "Sign In";
}

<div class="container" style="margin-top:30px;">
    <div class="row">
        @* Start of sign in / sign up nav bar
            PUT IN TO A PARTIAL VIEW*@
        <div class="col-sm-3" id="sidenav">
            <a href="#">
                <button class="btn mr-2 mb-2 btn-primary border-dark sidenavbutton" type="button">
                    <span class="btn-text">About</span>
                </button>
            </a>
            <br>
            <a href="#">
                <button class="btn mr-2 mb-2 btn-primary border-dark sidenavbutton" type="button">
                    <span class="btn-text">Privacy</span>
                </button>
            </a>
            <br>
            <a href="#">
                <button class="btn mr-2 mb-2 btn-primary border-dark sidenavbutton" type="button">
                    <span class="btn-text">Settings</span>
                </button>
            </a>
        </div>
        @* End of sign in / sign up nav bar *@
        <div class="card card-tertiary">
            <div class="card-header">
                Welcome Back!!
            </div>
            <div class="card-body">
                <form asp-action="Submit" asp-controller="SignIn" method="post">
                    <label asp-for="Username">Username: </label>
                    <span asp-validation-for="Username" class="text-danger"></span>
                    <br>
                    <input asp-for="Username" />
                    <br>
                    <label asp-for="Password">Password:   </label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <br>
                    <input asp-for="Password">
                    <br />
                    <br>
                    <input type="submit" value="Sign In">
                </form>
                <br>
                <div>
                    Don't have an account? <a href="SignUp">Sign up here.</a>
                </div>
            </div>
        </div>
    </div>
</div>
