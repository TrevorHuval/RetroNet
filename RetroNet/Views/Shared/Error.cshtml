@model ErrorViewModel
@{
    ViewData["Title"] = "Error!";
}

<div class="card card-tertiary">
    <div class="card-header">
        <span class="icon icon-xs w95-folder"></span>
        <span class="ml-4 text-danger">Error! Something bad happened :(</span>
    </div>
    <div class="card-body">
        <p class="card-text">
            @Model.ErrorDisplayMessage
        </p>
    </div>
</div>