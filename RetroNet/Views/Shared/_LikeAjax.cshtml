<script>
    function likePost(postId) {
        $.ajax({
            method: "POST",
            url: "@Url.Action("LikeAjax")?postId=" + postId,
            processData: false,
            data: $.param({ id: postId }),
            success: function (result) {
                if (result != -1) {
                    $("#" + postId + "-Likes").text(result);
                }
                $("#" + postId + "-LikeButton").hide();
                $("#" + postId + "-UnLikeButton").show();
            }
        })
    }

    function unlikePost(postId) {
        $.ajax({
            method: "POST",
            url: "@Url.Action("UnLikeAjax")?postId=" + postId,
            processData: false,
            data: $.param({ id: postId }),
            success: function (result) {
                if (result != -1) {
                    $("#" + postId + "-Likes").text(result);
                }
                $("#" + postId + "-LikeButton").show();
                $("#" + postId + "-UnLikeButton").hide();
            }

        })
    }
</script>