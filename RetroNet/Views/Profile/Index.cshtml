@model ProfileModel
@using _90sTest.Data.Extension;
@{ ViewData["Title"] = "Profile"; }


<div class="row">
    @{
        var navModel = new MainNavPartialViewModel { Username = User.GetLoggedInUserName() };
        var IsUsersProfile = Model.User.Id.Equals(User.GetLoggedInUserId<string>());
        
    }
    <partial name="_MainNav" model="navModel" />
    <div class="col-sm-9 mb-4 mb-lg-0 feed">
        <div class="card">
            <div class="card-header">
                @Model.User.Name (@@@Model.User.UserName)
            </div>
            <div class="card-body card-text">
                <div id="ViewBio">
                    @Model.User.Bio
                </div>
                <br />
                <div>
                    @{ 
                        var followsCountParams = new Dictionary<string, string>()
                        {
                            { "username", Model.User.UserName }
                        };
                    }
                    <span>Following: <a asp-action="Index" asp-controller="Follows" asp-all-route-data="followsCountParams">@Model.FollowingCount</a></span>
                    <span>Followers: <a asp-action="Index" asp-controller="Follows" asp-all-route-data="followsCountParams">@Model.FollowersCount</a></span>
                </div>
                <div class="d-flex justify-content-end mt-3">

                    @if (!IsUsersProfile)
                    {
                        var followParams = new Dictionary<string, string>()
                        {
                            { "userId", Model.User.Id }
                        };

                        if (Model.IsFollowed)
                        {
                            <a class="btn btn-sm mr-2 btn-primary border-dark" asp-action="UnFollow" asp-controller="Profile" asp-all-route-data="followParams">Unfollow</a>
                        }
                        else
                        {
                            <a class="btn btn-sm mr-2 btn-primary border-dark" asp-action="Follow" asp-controller="Profile" asp-all-route-data="followParams">Follow</a>
                        }
                    }
                </div>
            </div>
        </div>
        <br />
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="posts-tab" data-toggle="tab" href="#posts"
                   role="tab" aria-controls="posts" aria-selected="true">Posts</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="likes-tab" data-toggle="tab" href="#likes"
                   role="tab" aria-controls="likes" aria-selected="false">Likes</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane show active" id="posts" role="tabpanel"
                 aria-labelledby="posts-tab">
                @foreach (_90sTest.Entities.Post post in Model.UsersPosts)
                {
                    var declineParams = new Dictionary<string, string>()
                    {
                        { "postId", post.PostId.ToString() }
                    };
                    <div class="card">
                        <div class="card-header">
                            @Model.User.Name (@@@Model.User.UserName)
                        </div>
                        <div class="card-body card-text">
                            <p>
                                @post.Content
                            </p>
                            <div class="d-flex justify-content-end mt-3">
                                <time datetime="@post.Date.ToString()" date-format="">@post.Date.ToString()</time>
                                &nbsp;
                                <div>@post.Likes Likes</div>
                                &nbsp;
                                @if (!IsUsersProfile)
                                {
                                    <a class="btn btn-sm mr-2 btn-primary border-dark" asp-action="Like" asp-controller="Home" asp-all-route-data="declineParams">Like</a>
                                }
                                else
                                {
                                    <a class="btn btn-sm mr-2 btn-primary border-dark" asp-action="Delete" asp-controller="Home" asp-all-route-data="declineParams">Delete</a>
                                }
                            </div>
                        </div>
                    </div>
                    <br>
                }
            </div>
            <div class="tab-pane" id="likes" role="tabpanel" aria-labelledby="likes-tab">
                @if (Model.UserLikedPosts.Count != 0)
                {
                    @foreach (_90sTest.Entities.Post post in Model.UserLikedPosts)
                    {
                        var IsUsersPost = post.User.Id.Equals(User.GetLoggedInUserId<string>());
                        var declineParams = new Dictionary<string, string>()
                        {
                            { "postId", post.PostId.ToString() }
                        };
                <div class="card">
                    <div class="card-header">

                        @post.User.Name (<a asp-controller="Profile" asp-action="Index" asp-route-username=@post.User.UserName>@@@post.User.UserName</a>)
                        <div></div>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            @post.Content
                        </p>
                        <div class="d-flex justify-content-end mt-3">
                            <time datetime="@post.Date.ToString()" date-format="">@post.Date.ToString()</time>
                            &nbsp;
                            <div>@post.Likes Likes</div>
                            &nbsp;
                            @if (!IsUsersPost)
                            {
                                <a class="btn btn-sm mr-2 btn-primary border-dark" asp-action="Like" asp-controller="Home" asp-all-route-data="declineParams">Like</a>
                            }
                            else
                            {
                                <a class="btn btn-sm mr-2 btn-primary border-dark" asp-action="Delete" asp-controller="Home" asp-all-route-data="declineParams">Delete</a>
                            }
                        </div>
                    </div>
                </div>
                <br>
            }
                }
                else
                {
                    <p>This user has not liked any posts.</p>
                }
            </div>
        </div>
    </div>
</div>

<script>

    var d = new Date();
    var utcHours = d.getTimezoneOffset() / 60;

    var timeElements = document.getElementsByTagName("time");

    for (var i = 0, max = timeElements.length; i < max; i++) {
        var tempDate = new Date(timeElements[i].dateTime);
        tempDate.setTime(tempDate.getTime() - (utcHours * 60 * 60 * 1000));
        timeElements[i].dateTime = tempDate.toLocaleString();
        timeElements[i].innerText = timeElements[i].dateTime;
    }

</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}