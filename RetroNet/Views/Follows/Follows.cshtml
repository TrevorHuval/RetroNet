@model FollowsModel
@using _90sTest.Data.Extension;
@{
    ViewData["Title"] = "Follows";
}
<div class="row">
    @{
        var navModel = new MainNavPartialViewModel { Username = User.GetLoggedInUserName() };
        var IsUsersProfile = Model.User.Id.Equals(User.GetLoggedInUserId<string>());
    }
    <partial name="_MainNav" model="navModel" />
    <div class="col-sm-9 mb-4 mb-lg-0 feed">
        <div class="card">
            <div class="card-header">
                @Model.User.Name (@@@Model.User.UserName)
            </div>
            <div class="card-body card-text">
                <div id="ViewBio">
                    @Model.User.Bio
                </div>
                <br />
                <div>
                    <span>Following: <a href="#">100</a></span>
                    <span>Followers: <a href="#">100</a></span>
                </div>
                <div class="d-flex justify-content-end mt-3">

                    @if (!IsUsersProfile)
                    {
                        var followParams = new Dictionary<string, string>()
                                                                        {
                            { "userId", Model.User.Id }
                        };
                        if (Model.IsFollowed)
                        {
                            <a class="btn btn-sm mr-2 btn-primary border-dark" asp-action="UnFollow" asp-controller="Profile" asp-all-route-data="followParams">Unfollow</a>
                        }
                        else
                        {
                            <a class="btn btn-sm mr-2 btn-primary border-dark" asp-action="Follow" asp-controller="Profile" asp-all-route-data="followParams">Follow</a>
                        }
                    }
                </div>
            </div>
        </div>
        <br />
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="posts-tab" data-toggle="tab" href="#posts"
                   role="tab" aria-controls="posts" aria-selected="true">Followers</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="likes-tab" data-toggle="tab" href="#likes"
                   role="tab" aria-controls="likes" aria-selected="false">Following</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane show active" id="posts" role="tabpanel"
                 aria-labelledby="posts-tab">
                @if (Model.FollowersList.Count != 0)
                {
                    @foreach (_90sTest.Areas.Identity.Data.RetroNetUser user in Model.FollowersList)
                    {
                        <div class="card card-tertiary">
                            <div class="card-header">
                                @user.Name (@@@user.UserName)
                            </div>
                            <div class="card-body bg-white">
                                <p class="card-text">
                                    Common friends: 120<br>
                                    Posts: 10 <br>
                                </p>
                            </div>
                            <div class="card-footer">
                                <div class="d-flex">
                                    <a class="btn btn-sm mr-2 btn-primary border-dark" asp-controller="Profile" asp-action="Index" asp-route-username=@user.UserName>View Profile</a>
                                    @*<button class="btn btn-sm btn-primary" type="button">
                                            <span class="btn-text">Unfollow</span>
                                        </button>*@
                                </div>
                            </div>
                        </div>
                        <br>
                    }
                }
                else
                {
                    <p>This user does not have any followers.</p>
                }
            </div>
            <div class="tab-pane" id="likes" role="tabpanel" aria-labelledby="likes-tab">
                @if (Model.FollowingList.Count != 0)
                {
                    @foreach (_90sTest.Areas.Identity.Data.RetroNetUser user in Model.FollowingList)
                    {
                        <div class="card card-tertiary">
                            <div class="card-header">
                                @user.Name (@@@user.UserName)
                            </div>
                            <div class="card-body bg-white">
                                <p class="card-text">
                                    Common friends: 120<br>
                                    Posts: 10 <br>
                                </p>
                            </div>
                            <div class="card-footer">
                                <div class="d-flex">
                                    <a class="btn btn-sm mr-2 btn-primary border-dark" asp-controller="Profile" asp-action="Index" asp-route-username=@user.UserName>View Profile</a>
                                    @*<button class="btn btn-sm btn-primary" type="button">
                                            <span class="btn-text">Unfollow</span>
                                        </button>*@
                                </div>
                            </div>
                        </div>
                        <br>
                    }
                }
                else
                {
                    <p>This user does not follow anyone.</p>
                }
            </div>
        </div>
    </div>
</div>
