@using _90sTest.Data.Extension
@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}
<div>
    <div class="row">
        <div class="col-md-3">
            <div class="col-sm-3" id="sidenav">
                <a class="btn mr-2 mb-2 btn-primary border-dark sidenavbutton" asp-controller="Home" asp-action="Index">Feed</a>
                <br>
                @{
                    var ProfileParameters = new Dictionary<string, string>()
                    {
                        { "username",  User.GetLoggedInUserName() }
                    };
                }
                <a class="btn mr-2 mb-2 btn-primary border-dark sidenavbutton" asp-controller="Profile" asp-action="Index" asp-all-route-data="ProfileParameters">Profile</a>
                <br>
                <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="btn mr-2 mb-2 btn-primary border-dark sidenavbutton">
                        <span class="btn-text">Logout</span>
                    </button>
                </form>
            </div>
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
